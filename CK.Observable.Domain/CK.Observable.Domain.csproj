<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\Common\Shared.props" />
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CK.ActivityMonitor.SimpleSender" Version="12.1.1--0005-develop" />
    <PackageReference Include="System.Memory" Version="4.5.3" />
  </ItemGroup>

  <!--
    Restore ReproducibleBuilds and add PDBs to the Nuget package, even if SourceLink is off.
    Currently, CKli removes all that when disabling SourceLink.
  -->
  <!--<ReproducibleBuilds>: See http://blog.paranoidcoding.com/2016/04/05/deterministic-builds-in-roslyn.html.-->
  <PropertyGroup Condition=" '$(CakeBuild)' == 'true' ">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <Deterministic>true</Deterministic>
    <PathMap>'$(SolutionDir)'=C:\CKli-World\CK-Core-Projects\CK-Observable-Domain</PathMap>
  </PropertyGroup>
  <!--</ReproducibleBuilds>-->

  <PropertyGroup Condition=" '$(CakeBuild)' == 'true' ">
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
</Project>