<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\Common\Shared.props" />
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CK.ActivityMonitor.SimpleSender" Version="13.2.0" />
    <PackageReference Include="System.Memory" Version="4.5.3" />
  </ItemGroup>

  <!--
    Add PDBs to the Nuget package, even if SourceLink is off.
    Currently, CKli removes all that when disabling SourceLink.
  -->

  <PropertyGroup Condition=" '$(CakeBuild)' == 'true' ">
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
</Project>