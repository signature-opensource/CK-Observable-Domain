{
   "compilerOptions": {
       "strict": true,
       "target": "es2022",
       "module": "ES6",
       "moduleResolution": "node",
       "lib": ["es2022", "dom"],
       "baseUrl": "./src",
       "outDir": "./dist/esm",
       "sourceMap": true,
       "declaration": true,
       "esModuleInterop": true,
       "resolveJsonModule": true,
       "rootDir": "src"
