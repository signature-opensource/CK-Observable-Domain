{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "module": "ES6",
        "moduleResolution": "node",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "baseUrl": "./src",
        "outDir": "./dist/esm",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "rootDir": "ts/src"
    },
    "include": [
        "ts/src/**/*"
    ],
    "exclude": [
        ".vscode",
        "node_modules",
        "spec"
    ]
}
